@model RandApp.ViewModels.MenuCategoryViewModel
<style>
    .list-group-menu-item {
        border: none;
        padding-left: 0px;
        padding-right: 0px;
        width: auto;
    }
</style>
<div>
    <ul class="list-group list-group-flush">
        @foreach (var type in Model.Types)
        {
            switch ((Model.DesignedFor.ToLower(), Model.Category.ToLower()))
            {
                case ("men", "clothing"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.MClothing), type)</a>
                    </li>
                    break;
                case ("men", "bags"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.MBags), type)</a>
                    </li>
                    break;
                case ("men", "shoes"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.MShoes), type)</a>
                    </li>
                    break;
                case ("men", "accessories"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.MAccessories), type)</a>
                    </li>
                    break;
                case ("women", "clothing"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.WClothing), type)</a>
                    </li>
                    break;
                case ("women", "bags"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.WBags), type)</a>
                    </li>
                    break;
                case ("women", "shoes"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.WShoes), type)</a>
                    </li>
                    break;
                case ("women", "accessories"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.WAccessories), type)</a>
                    </li>
                    break;
                case ("kids", "clothing"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.KClothing), type)</a>
                    </li>
                    break;
                case ("kids", "shoes"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.KShoes), type)</a>
                    </li>
                    break;
                case ("kids", "accessories"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none">@Enum.ToObject(typeof(RandApp.Enums.KAccessories), type)</a>
                    </li>
                    break;
            }
        }
    </ul>
</div>

