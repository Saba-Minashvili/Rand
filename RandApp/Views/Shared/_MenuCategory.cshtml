                        <a class="text-decoration-none" asp-controller="Item" asp-action="IndexFor" asp-route-designedFor="kids" asp-route-category="shoes" asp-route-type="@Enum.ToObject(typeof(RandApp.Enums.KShoes), type).ToString().ToLower()">
