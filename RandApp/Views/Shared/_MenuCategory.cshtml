@model RandApp.ViewModels.MenuCategoryViewModel
<style>
    .list-group-menu-item {
        border: none;
        padding-left: 0px;
        padding-right: 0px;
        width: auto;
    }

        .list-group-menu-item a {
            color: black;
        }

            .list-group-menu-item a:hover {
                color: black;
                font-weight: 500;
            }
</style>
<div>
    <ul class="list-group list-group-flush">
        @foreach (var type in Model.Types)
        {
            switch ((Model.DesignedFor.ToLower(), Model.Category.ToLower()))
            {
                case ("men", "clothing"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none" asp-controller="Item" asp-action="IndexFor" asp-route-designedFor="men" asp-route-category="clothing" asp-route-type="@Enum.ToObject(typeof(RandApp.Enums.MClothing), type).ToString().ToLower()">
                            @Enum.ToObject(typeof(RandApp.Enums.MClothing), type)
                        </a>
                    </li>
                    break;
                case ("men", "bags"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none" asp-controller="Item" asp-action="IndexFor" asp-route-designedFor="men" asp-route-category="bags" asp-route-type="@Enum.ToObject(typeof(RandApp.Enums.MBags), type).ToString().ToLower()">
                            @Enum.ToObject(typeof(RandApp.Enums.MBags), type)
                        </a>
                    </li>
                    break;
                case ("men", "shoes"):
                    <li class="list-group-item list-group-menu-item">
                        <a class="text-decoration-none" asp-controller="Item" asp-action="IndexFor" asp-route-designedFor="men" asp-route-category="shoes" asp-route-type="@Enum.ToObject(typeof(RandApp.Enums.MShoes), type).ToString().ToLower()">
