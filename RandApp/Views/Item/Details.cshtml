@model RandApp.Models.Item

<section class="item-details">
    <div class="container">
        <a asp-controller="Item" asp-action="ReturnUrl" asp-route-returnUrl="@ViewBag.returnUrl" class="go-back-btn"><i class="fa-solid fa-arrow-left-long"></i>  Go Back</a>
        <div class="d-flex align-items-center justify-content-between mt-5">
            <aside class="mw-100 p-3 side-left">
                <img class="item-img" src="~/assets/@Model.ItemPhoto" />
            </aside>
            <aside class="mw-100 p-3 side-right text-sm-center">
                <h2>@Model.Name</h2>
                <p>@Model.Description</p>
                <ul class="list-group list-group-flush">
                    <li class="list-group-item"><span class="text-info">Color:</span> @Model.Color</li>
                    <li class="list-group-item"><span class="text-info">Size:</span> @Model.Size</li>
                    <li class="list-group-item"><span class="text-info">Designed For:</span> @Model.DesignedFor</li>
                    <li class="list-group-item"><span class="text-info">Price:</span> @Model.Price ₾</li>
                </ul>
                <div class="card-body">
                    <a asp-controller="Cart" asp-action="Add" asp-route-ItemId="@Model.Id" class="btn btn-outline-dark add-to-cart-btn">Add To Cart</a>
                </div>
            </aside>
        </div>
    </div>
</section>

@section Styles {
    <style>
        .go-back-btn {
            text-decoration: none;
            color: black;
            opacity: 0.9;
            font-size: 15px;
            transition: 0.3s;
        }

            .go-back-btn:hover {
                cursor: pointer;
                text-decoration: none;
                color: black;
                font-size: 16px;
                opacity: 1;
            }

        .side-left {
            width: 50%;
            max-height: 600px;
        }

        .side-right {
            width: 50%;
        }

        .item-img {
            max-width: 100%;
            max-height: 630px;
            object-fit: cover;
        }

        .list-group-item {
            border: none;
            padding-left: 0;
        }

        .card-body {
            padding-left: 0;
        }

        @@media only screen and (max-width:768px) {
            .side-left {
                width: 50%;
                max-height: 600px;
            }

            .side-right {
                width: 40%;
            }

                .side-right h2 {
                    font-size: 19px;
                }

                .side-right p {
                    font-size: 13px;
                }
        }

        @@media only screen and (max-width:768px) {
            .side-left {
                width: 50%;
                max-height: 600px;
            }

            .side-right {
                width: 50%;
            }

                .side-right h2 {
                    font-size: 17px;
                }

                .side-right p {
                    font-size: 11px;
                }

            .add-to-cart-btn {
                font-size: 11px;
            }
        }
    </style>
}